<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | aiplugs cms</title>
    <aiplugs-assets />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --bg-image-primary: url('/images/ekaterina-sazonova-1314962-unsplash.jpg');
            --bg-image-secondary: url('/images/ekaterina-sazonova-1314962-unsplash.jpg');
        }

        body {
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: -0.5rem;
                bottom: -0.5rem;
                left: -0.5rem;
                right: -0.5rem;
                /* filter: brightness(var(--bg-image-brightness), 100%);       */
                background: var(--bg-image-secondary);
                background-size: cover;
                z-index: -1;
            }
    </style>
</head>
<body>
    <div class="bg-credit">
        <a style="background-color:black;color:white;text-decoration:none;padding:4px 6px;font-family:-apple-system, BlinkMacSystemFont, &quot;San Francisco&quot;, &quot;Helvetica Neue&quot;, Helvetica, Ubuntu, Roboto, Noto, &quot;Segoe UI&quot;, Arial, sans-serif;font-size:12px;font-weight:bold;line-height:1.2;display:inline-block;border-radius:3px" href="https://unsplash.com/@@katgo_83?utm_medium=referral&amp;utm_campaign=photographer-credit&amp;utm_content=creditBadge" target="_blank" rel="noopener noreferrer" title="Download free do whatever you want high-resolution photos from Ekaterina Sazonova"><span style="display:inline-block;padding:2px 3px"><svg xmlns="http://www.w3.org/2000/svg" style="height:12px;width:auto;position:relative;vertical-align:middle;top:-2px;fill:white" viewBox="0 0 32 32"><title>unsplash-logo</title><path d="M10 9V0h12v9H10zm12 5h10v18H0V14h10v9h12v-9z"></path></svg></span><span style="display:inline-block;padding:2px 3px">Ekaterina Sazonova</span></a>
    </div>
    <aiplugs-nav>
        <aiplugs-nav-item icon="~/images/icon.svg" href="~/">
            <span class="logo">aiplugs cms</span>
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-bars" is="aiplugs-nav-fold">
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-folder" href="~/files" active="@SharedNavPages.FilesNavActive(ViewContext)">
            <span>Files</span>
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-database">
            <span>Collections</span>
        </aiplugs-nav-item>
        <aiplugs-nav-items>
            @foreach (var collection in ViewBag.Collections)
            {
                <aiplugs-nav-item href="@Url.Action("List", "Collections", new { name = collection.Name})"
                                  active="@SharedNavPages.Collections.NavActive(ViewContext, collection.Name)">@collection.GetDisplayName()</aiplugs-nav-item>
            }
        </aiplugs-nav-items>
        <aiplugs-nav-item icon="fas fa-industry" href="~/jobs" active="@SharedNavPages.JobsNavActive(ViewContext)">
            <span>Jobs</span>
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-cog">
            <span>Settings</span>
        </aiplugs-nav-item>
        <aiplugs-nav-items>
            <aiplugs-nav-item href="~/templates" active="@SharedNavPages.TemplatesNavActive(ViewContext)">
                Templates
            </aiplugs-nav-item>
            <aiplugs-nav-item href="~/settings/collections">Collections</aiplugs-nav-item>
            <aiplugs-nav-item href="~/settings/users">Users</aiplugs-nav-item>
        </aiplugs-nav-items>
        <div is="aiplugs-space"></div>
        <aiplugs-nav-item slot="bottom" icon="https://avatars2.githubusercontent.com/u/1011232?s=32&u=332a5b77904556e83686f16105a3355f46c82292&v=4">
            @@iwate
        </aiplugs-nav-item>
    </aiplugs-nav>
    @RenderBody()
    @RenderSection("Scripts", required: false)
    <script src="~/js/site.js"></script>
</body>
</html>
