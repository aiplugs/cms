<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aiplugs.CMS.Web</title>
    <aiplugs-assets />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --bg-image-primary: url('/images/hugues-de-buyer-mimeure-335733-unsplash.min.jpg');
            --bg-image-secondary: url('/images/hugues-de-buyer-mimeure-335733-unsplash.min.jpg');
        }

        body {
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: -0.5rem;
                bottom: -0.5rem;
                left: -0.5rem;
                right: -0.5rem;
                /* filter: brightness(var(--bg-image-brightness), 100%);       */
                background: var(--bg-image-secondary);
                background-size: cover;
                z-index: -1;
            }
    </style>
</head>
<body>
    <div class="bg-credit">
        <a style="background-color:black;color:white;text-decoration:none;padding:4px 6px;font-family:-apple-system, BlinkMacSystemFont, 'San Francisco', 'Helvetica Neue', Helvetica, Ubuntu, Roboto, Noto, 'Segoe UI', Arial, sans-serif;font-size:12px;font-weight:bold;line-height:1.2;display:inline-block;border-radius:3px" href="https://unsplash.com/@@huguesdb?utm_medium=referral&amp;utm_campaign=photographer-credit&amp;utm_content=creditBadge" target="_blank" rel="noopener noreferrer" title="Download free do whatever you want high-resolution photos from Hugues de BUYER-MIMEURE"><span style="display:inline-block;padding:2px 3px"><svg xmlns="http://www.w3.org/2000/svg" style="height:12px;width:auto;position:relative;vertical-align:middle;top:-1px;fill:white" viewBox="0 0 32 32"><title>unsplash-logo</title><path d="M20.8 18.1c0 2.7-2.2 4.8-4.8 4.8s-4.8-2.1-4.8-4.8c0-2.7 2.2-4.8 4.8-4.8 2.7.1 4.8 2.2 4.8 4.8zm11.2-7.4v14.9c0 2.3-1.9 4.3-4.3 4.3h-23.4c-2.4 0-4.3-1.9-4.3-4.3v-15c0-2.3 1.9-4.3 4.3-4.3h3.7l.8-2.3c.4-1.1 1.7-2 2.9-2h8.6c1.2 0 2.5.9 2.9 2l.8 2.4h3.7c2.4 0 4.3 1.9 4.3 4.3zm-8.6 7.5c0-4.1-3.3-7.5-7.5-7.5-4.1 0-7.5 3.4-7.5 7.5s3.3 7.5 7.5 7.5c4.2-.1 7.5-3.4 7.5-7.5z"></path></svg></span><span style="display:inline-block;padding:2px 3px">Hugues de BUYER-MIMEURE</span></a>
    </div>
    <aiplugs-nav>
        <aiplugs-nav-item icon="~/images/icon.svg" href="~/">
            <span class="logo">aiplugs cms</span>
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-bars" class="fold-action">
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-folder" href="~/files" active="@SharedNavPages.FilesNavActive(ViewContext)">
            <span>Files</span>
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-database">
            <span>Collections</span>
        </aiplugs-nav-item>
        <aiplugs-nav-items>
            @foreach (var collection in ViewBag.Collections)
            {
                <aiplugs-nav-item href="@Url.Action("List", "Collections", new { name = collection.Name})"
                                  active="@SharedNavPages.Collections.NavActive(ViewContext, collection.Name)">@collection.GetDisplayName()</aiplugs-nav-item>
                            }
        </aiplugs-nav-items>
        <aiplugs-nav-item icon="fas fa-industry" href="~/jobs" active="@SharedNavPages.JobsNavActive(ViewContext)">
            <span>Jobs</span>
        </aiplugs-nav-item>
        <aiplugs-nav-item icon="fa fa-cog">
            <span>Settings</span>
        </aiplugs-nav-item>
        <aiplugs-nav-items>
            <aiplugs-nav-item href="~/templates" active="@SharedNavPages.TemplatesNavActive(ViewContext)">
                Templates
            </aiplugs-nav-item>
            <aiplugs-nav-item href="~/settings/collections">Collections</aiplugs-nav-item>
            <aiplugs-nav-item href="~/settings/accounts">Accounts</aiplugs-nav-item>
        </aiplugs-nav-items>
        <div is="aiplugs-space"></div>
        <aiplugs-nav-item slot="bottom" icon="https://avatars2.githubusercontent.com/u/1011232?s=32&u=332a5b77904556e83686f16105a3355f46c82292&v=4">
            @@iwate
        </aiplugs-nav-item>
    </aiplugs-nav>
    @RenderBody()
    @RenderSection("Scripts", required: false)
    <script>
        $(document).on('beforeAjaxSend.ic', function (_, ajaxSetting, elt) {
            elt = elt[0];
            if (ajaxSetting.type.toLowerCase() === 'post' && elt.name && elt.value) {
                const prefix = (ajaxSetting.data || '').length > 0 ? '&' : '';
                ajaxSetting.data += prefix + elt.name + '=' + encodeURIComponent(elt.value);
            }
        })
    </script>
</body>
</html>
